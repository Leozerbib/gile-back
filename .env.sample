# Example environment variables for local development
MAIN_HTTP_PORT=3000

# gRPC endpoints for each microservice (client targets)
AUTH_GRPC_URL=localhost:50051
WORKSPACE_GRPC_URL=localhost:50052
PROJECT_GRPC_URL=localhost:50053
CHAT_GRPC_URL=localhost:50054
ANALYTICS_GRPC_URL=localhost:50055
LOGGER_GRPC_URL=localhost:50056

# Prisma / Supabase Postgres connection string
# Example (replace credentials and host):
# DATABASE_URL=postgresql://postgres:postgres@db.xxxxx.supabase.co:5432/postgres?schema=public
DATABASE_URL=

# Supabase configuration
SUPABASE_URL=
SUPABASE_ANON_KEY=
# Optionally, use the service role key for server-side operations
SUPABASE_SERVICE_ROLE_KEY=

# JWT configuration
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=
# Access token TTL (e.g., 900s, 15m, 1h);
JWT_ACCESS_TTL=15m
# Refresh token TTL (e.g., 7d)
JWT_REFRESH_TTL=7d

# gRPC bind addresses for servers (if you want to override defaults)
# AUTH_GRPC_BIND=0.0.0.0:50051
# WORKSPACE_GRPC_BIND=0.0.0.0:50052
# PROJECT_GRPC_BIND=0.0.0.0:50053
# CHAT_GRPC_BIND=0.0.0.0:50054
# ANALYTICS_GRPC_BIND=0.0.0.0:50055
# LOGGER_GRPC_BIND=0.0.0.0:50056
